{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "build",
    "declaration": false,
    "strictNullChecks": true,
    "types": ["@sa-mp/node","@types/node"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".idea",
    "node_modules",
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
